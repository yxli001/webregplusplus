{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prestart": "pnpm run build",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
    "dev-staging": "cross-env NODE_ENV=staging nodemon --watch src --exec ts-node src/index.ts",
    "cron-dev": "cross-env NODE_ENV=development ts-node src/cron.ts",
    "cron-staging": "cross-env NODE_ENV=staging ts-node src/cron.ts",
    "cron": "cross-env NODE_ENV=production ts-node src/cron.ts",
    "lint-check": "pnpm biome format ./ && pnpm biome lint ./",
    "lint-fix": "pnpm biome check --write ./",
    "prepare": "cd .. && husky",
    "check-git-hooks": "cd .. && node .secret-scan/secret-scan.js -- --check-git-hooks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^22.13.0",
    "@types/pg": "^8.15.2",
    "cross-env": "^7.0.3",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.2.0",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  }
}
